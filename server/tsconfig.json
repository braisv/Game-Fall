{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "typeRoots": [
  "./typings",
  "./node_modules/@types/"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src/",
    "paths": {
      "@/*": [
        "*"
      ],
    },
  },
  "include": [
    "**/*.ts",
    "src/models/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules", "dist/**/*"],
}
